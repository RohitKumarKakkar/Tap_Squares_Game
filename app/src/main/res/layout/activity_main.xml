<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Score : 0"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/redCard"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:background="#F31C17" />

                <FrameLayout
                    android:id="@+id/blueCard"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:layout_alignParentEnd="true"
                    android:background="#3854FF" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/greenCard"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:background="#43A047" />

                <FrameLayout
                    android:id="@+id/yellowCard"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:layout_alignParentEnd="true"
                    android:background="#FFB300" />

            </RelativeLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Tap Grey Tile to Earn Scores"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Assignment By : Rohit Kumar\n
Email : zkumarzrohit@gmail.com"
        android:textColor="@color/black"
        android:textStyle="bold" />


</LinearLayout>